@model Mvc.Models.MVCLoginModel
@{
    ViewBag.Title = "LoginPage";
}
<body id="LoginForm">
    <div class="container">
        <h1 class="form-heading">login Form</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2>Login Form</h2>
                    <p>Please enter your UserName and password</p>
                </div>
                @using (Html.BeginForm("LoginForm", "Register"))
                {
                    // ViewData.ModelState.Remove("UserName");
                    <div class="form-group">
                        @*<div class="control-label col-sm-2">
                                @Html.LabelFor(model => model.UserName)
                            </div>*@
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Enter UserName" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                    @*<div class="control-label col-sm-2">
                            @Html.LabelFor(model => model.Password)
                        </div>*@
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Enter Password" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                    <div class="form-group">
                        <button type="reset" class="btn btn-primary">Reset</button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>



